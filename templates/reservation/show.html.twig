{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ reservation.timeSlot }}</td>
            </tr>
            <tr>
                <th>EventName</th>
                <td>{{ reservation.eventName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_reservations_list', {'id': user.id}) }}">back to list</a>

    <a href="{{ path('user_reservations_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
